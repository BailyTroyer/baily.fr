---
import { SEO } from "astro-seo";
import { t } from "i18next";
const { href: canonicalUrl } = Astro.url;
---

<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<SEO
  title={t("seo.title")}
  description={t("seo.description")}
  canonical={canonicalUrl}
  openGraph={{
    basic: {
      title: t("seo.ogTitle"),
      type: "website",
      image: "https://avatars.githubusercontent.com/u/22754190?v=4",
      url: canonicalUrl,
    },
    image: {
      alt: t("seo.ogImageAlt"),
      width: 1200,
      height: 630,
      type: "image/jpeg",
    },
  }}
/>
